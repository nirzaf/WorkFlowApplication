@model IEnumerable<WorkFlowApplication.Models.EntityModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EntityOwner)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntityCriteria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActionRequired)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExitCriteria)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntityCreatedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntityCloseDate)
        </th>
